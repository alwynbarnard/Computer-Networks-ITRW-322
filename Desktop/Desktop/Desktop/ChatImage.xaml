<UserControl x:Class="Desktop.ChatImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Desktop"
             mc:Ignorable="d" Height="243.5" Width="308.501" MouseDown="UserControl_MouseDown">
    <Grid Name="grid"  Background="#FF936B33">
        <Label Background="Black" Margin="6,28,0,0" OpacityMask="Black" Width="298" Height="190" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Viewbox x:Name="viewbox">
                <Image x:Name="imageContainer" Height="30" Width="48" OpacityMask="#FFA02424"/>
            </Viewbox>
        </Label>
        <Label x:Name="lblDisplayName" Content="Display Name" Margin="0,0,0,210" HorizontalAlignment="Left" Width="217" Height="34" VerticalAlignment="Bottom" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="lblDateTime" Content="Date Time" Margin="116,218,0,0" FlowDirection="RightToLeft" FontSize="10" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="193"/>
    </Grid>
</UserControl>
