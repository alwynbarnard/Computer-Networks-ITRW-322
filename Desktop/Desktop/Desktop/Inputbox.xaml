<Window x:Class="Desktop.Inputbox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop"
        mc:Ignorable="d"
        Title="Forgot Password" Height="182.141" Width="423.319" Background="#FF764601">
    <Grid Margin="0,0,2,0">
        <Grid Height="131" Margin="10,10,10,0" VerticalAlignment="Top" Background="#FFC37C16">
            <Button Content="Send reset email" HorizontalAlignment="Center" VerticalAlignment="Center" Width="140" Margin="123,88,121,12" Height="31" FontFamily="Arial" FontSize="16" Click="Button_Click"/>
            <Label Content="Please enter your linked email address" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="19,22,0,0" FontFamily="Arial" FontSize="20"/>
            <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="349" Margin="25,55,0,0"/>
        </Grid>
    </Grid>
</Window>
